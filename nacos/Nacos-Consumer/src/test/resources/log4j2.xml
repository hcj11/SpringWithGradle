<Configuration status="WARN">
    <Appenders>
        <Appenders>
            <Console name="STDOUT" target="SYSTEM_OUT">
                <Pattern>%m%n</Pattern>
            </Console>
        </Appenders>
    </Appenders>

    <Loggers>

        <Logger name="org.apache.dubbo.config.ServiceConfig" level="debug"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="org.apache.dubbo" level="debug"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="org.apache.dubbo.common.logger.LoggerFactory" level="debug"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Logger name="org.apache.zookeeper.ZooKeeper" level="debug"
                additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
